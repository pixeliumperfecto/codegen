+
+export interface TransformOptions {
+  ssr?: boolean
+  html?: boolean
+}
+
+export async function loadAndTransform(
+  id: string,
+  url: string,
+  server: ViteDevServer,
+  options: TransformOptions,
+  timestamp: number,
+  mod?: ModuleNode,
+  resolved?: PartialResolvedId,
