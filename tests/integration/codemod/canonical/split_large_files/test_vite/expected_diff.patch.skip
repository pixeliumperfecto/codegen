+          code: result.css.toString(),
+          map,
+          additionalMap,
+          deps,
+        }
+      } catch (e) {
+        // normalize SASS error
+        e.message = `[sass] ${e.message}`
+        e.id = e.file
+        e.frame = e.formatted
+        return { code: '', error: e, deps: [] }
+      }
+    },
+  }
