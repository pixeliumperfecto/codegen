+        // ensure ws server started
+        hot.listen()
+        await initServer()
+      } catch (e) {
+        httpServer.emit('error', e)
+        return
+      }
+      return listen(port, ...args)
+    }) as any
+  } else {
+    if (options.hotListen) {
+      hot.listen()
+    }
+    await initServer()
+  }
+
+  return server
