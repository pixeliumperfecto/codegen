# GitHub Configuration
# Required: GitHub Personal Access Token with 'repo' and 'admin:repo_hook' scopes
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN="your_github_token_here"

# Server Configuration
# Port for the local server (default: 8000)
PORT=8000

# Ngrok Configuration
# Whether to use ngrok for exposing the server (default: true)
USE_NGROK="true"

# Ngrok authentication token (recommended for stability)
# Get your token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN="your_ngrok_auth_token_here"

# Cloudflare Configuration
# Whether to use Cloudflare Workers for webhook forwarding (default: false)
# This provides a more stable solution than ngrok for production use
USE_CLOUDFLARE="false"

# Cloudflare API token with Workers and DNS permissions
# Get your token from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN="your_cloudflare_api_token_here"

# Cloudflare account ID
# Find this in your Cloudflare dashboard URL: https://dash.cloudflare.com/ACCOUNT_ID
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id_here"

# Optional: Cloudflare zone ID (only needed if using a custom domain)
# CLOUDFLARE_ZONE_ID="your_cloudflare_zone_id_here"

# Optional: Cloudflare Worker name (default: pr-review-bot)
# CLOUDFLARE_WORKER_NAME="pr-review-bot"

# Optional: Cloudflare Worker route pattern (only needed if using a custom domain)
# Example: "example.com/webhook/*"
# CLOUDFLARE_WORKER_ROUTE="your_domain.com/webhook/*"

# Webhook URL (optional, only needed if not using ngrok or Cloudflare)
# If provided, this URL will be used for webhooks instead of ngrok or Cloudflare
# Example: WEBHOOK_URL="https://your-public-url.com/webhook"
# WEBHOOK_URL=""