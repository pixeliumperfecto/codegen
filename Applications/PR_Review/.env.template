# GitHub Configuration
# Create a token with 'repo' and 'admin:repo_hook' scopes at https://github.com/settings/tokens
GITHUB_TOKEN="your_github_token_here"

# Server Configuration
# Port for the local FastAPI server
PORT=8000

# Ngrok Configuration
# Set to "true" to automatically start ngrok and use it for webhooks
# If enabled, you don't need to set WEBHOOK_URL as it will be auto-detected
USE_NGROK="true"

# Your ngrok authentication token (REQUIRED for ngrok to work properly)
# Get it from: https://dashboard.ngrok.com/get-started/your-authtoken
# After signing up, you can find your token at the URL above
NGROK_AUTH_TOKEN="your_ngrok_auth_token_here"

# Manual Webhook URL (optional, only used if USE_NGROK is "false")
# Public URL for GitHub webhooks (must be publicly accessible from the internet)
# Example: https://abc123.ngrok.io/webhook
# WEBHOOK_URL="https://your-public-url.ngrok.io/webhook"

# Codegen Configuration
# API keys for AI services used for PR review
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
OPENAI_API_KEY="your_openai_api_key_here"